/* 全局样式 */
page {
  background: linear-gradient(to bottom, #fff8d4, #f5edc4);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
}

.container {
  min-height: 100vh;
  background: linear-gradient(to bottom, #fff8d4, #f5edc4);
}

/* 通用按钮样式 */
.btn-primary {
  background: linear-gradient(to bottom, #fdc03c, #f4b942);
  color: white;
  border: 2px solid #bf6b3c;
  border-radius: 50rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 32rpx rgba(253, 192, 60, 0.3);
}

.btn-primary:active {
  background: linear-gradient(to bottom, #f4b942, #fdc03c);
}

/* 卡片样式 */
.card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
}

/* 文本样式 */
.text-primary {
  color: #3c3c43;
}

.text-secondary {
  color: #787880;
}

.text-muted {
  color: #999999;
}

/* 布局样式 */
.flex {
  display: flex;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

/* 间距样式 */
.p-4 {
  padding: 32rpx;
}

.px-6 {
  padding-left: 48rpx;
  padding-right: 48rpx;
}

.py-4 {
  padding-top: 32rpx;
  padding-bottom: 32rpx;
}

.mb-4 {
  margin-bottom: 32rpx;
}

.mb-6 {
  margin-bottom: 48rpx;
}

.mb-8 {
  margin-bottom: 64rpx;
}

/* 响应式文字大小 */
.text-xs {
  font-size: 24rpx;
}

.text-sm {
  font-size: 28rpx;
}

.text-base {
  font-size: 32rpx;
}

.text-lg {
  font-size: 36rpx;
}

.text-xl {
  font-size: 40rpx;
}

.text-2xl {
  font-size: 48rpx;
}

/* 字重 */
.font-bold {
  font-weight: bold;
}

.font-medium {
  font-weight: 500;
}

/* 圆角 */
.rounded-full {
  border-radius: 50%;
}

.rounded-lg {
  border-radius: 16rpx;
}

.rounded-xl {
  border-radius: 24rpx;
}

.rounded-2xl {
  border-radius: 32rpx;
}

/* 阴影 */
.shadow-lg {
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.shadow-xl {
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.15);
}

/* 过渡动画 */
.transition {
  transition: all 0.3s ease;
}

/* 遮罩层 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  background: white;
  border-radius: 32rpx;
  padding: 32rpx;
  margin: 32rpx;
  max-width: 600rpx;
  width: 100%;
}

/* 文本对齐 */
.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}
